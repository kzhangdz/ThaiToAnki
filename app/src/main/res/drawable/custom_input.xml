<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Search bar settings if selected -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_background"/>
            <corners android:radius="50dp"/>
            <stroke android:color="@color/md_theme_primary" android:width="1dp"/>
        </shape>
    </item>

    <!-- Search bar settings if not selected -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_background"/>
            <corners android:radius="50dp"/>
            <stroke android:color="@color/md_theme_outline" android:width="1dp"/>
        </shape>
    </item>

</selector>